---
import { Image } from 'astro:assets';
import myImage from '../../assets/images/nefrologia.jpg';

const article = Astro.props;
---

<div class="rounded-lg border bg-card text-card-foreground shadow-sm flex flex-col overflow-hidden text-center h-full transition-shadow hover:shadow-lg">
    <div class="text-center items-center hover:shadow-xl transition-shadow duration-300 w-full ">
        <div class="flex flex-col space-y-1.5 items-center p-6">
            <img class="rounded-full" src="/assets/images/nefrologia.jpg" width="200" alt="team member" >
            <!-- <Image src={myImage} alt="team member" class="my-class" /> -->
        </div>
        <div class="flex-grow flex flex-col justify-start pt-0 text-2xl font-bold">
            {article.name}
        </div>
        <div class="pb-6 text-sm ">
            <p>{article.title}</p>
            <p>{article.description}</p>
        </div>
        
    </div>
     <Image src={myImage} width="250" height="250" alt="Imagen del post" />
</div>